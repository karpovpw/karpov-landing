# Environment Configuration Template
# Copy this file to .env.local for local development

# Application Configuration
NEXT_PUBLIC_APP_URL=https://karpov.pw
NEXT_PUBLIC_SITE_NAME="Alexander Karpov's Portfolio"
NEXT_PUBLIC_SITE_DESCRIPTION="Full-stack developer and designer portfolio showcasing modern web technologies"

# API Configuration (if using external APIs)
# NEXT_PUBLIC_API_URL=https://api.example.com
# API_SECRET_KEY=your-secret-key

# Analytics and Monitoring
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Error Monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# Performance Monitoring
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# SEO Configuration
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/images/og-default.jpg

# Contact Form Configuration (if applicable)
# NEXT_PUBLIC_CONTACT_EMAIL=hello@karpov.pw
# RESEND_API_KEY=your-resend-api-key
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Database (if using external DB)
# DATABASE_URL=postgresql://username:password@host:port/database

# Social Media Links
NEXT_PUBLIC_GITHUB_URL=https://github.com/karpovpw
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/alexander-karpov
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/karpovpw

# Feature Flags
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_ENABLE_PWA=true

# Development Settings
NODE_ENV=development